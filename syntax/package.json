{
  "name": "ldoc-syntax",
  "displayName": "LDoc Syntax",
  "description": "Syntax highlighting for my custom documentation language",
  "version": "0.0.1",
  "publisher": "AstraVirtual",  
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Programming Languages"],
  "contributes": {
    "languages": [
      {
        "id": "ldoc",
        "aliases": ["LDOC"],
        "extensions": [".ldoc"]
      }
    ],
    "grammars": [
      {
        "language": "ldoc",
        "scopeName": "source.ldoc",
        "path": "./syntaxes/ldoc.tmLanguage.json"
      }
    ]
  },
  "dependencies": {}
}