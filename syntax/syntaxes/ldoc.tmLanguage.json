{
  "scopeName": "source.ldoc",
  "patterns": [
    {
      "name": "comment.line.double-slash.ldoc",
      "match": "//.*$"
    },
    {
      "name": "markup.heading.1.ldoc",
      "match": "^# (.+)$"
    },
    {
      "name": "markup.heading.2.ldoc",
      "match": "^## (.+)$"
    },
    {
      "name": "markup.heading.3.ldoc",
      "match": "^### (.+)$"
    },
    {
      "name": "keyword.control.ldoc",
      "match": "^\\s*@\\w+"
    },
    {
      "name": "markup.fenced-code-block.ldoc",
      "begin": "^```(\\w*)\\s*$",
      "beginCaptures": {
        "1": { "name": "storage.type.code.ldoc" }
      },
      "end": "^```\\s*$",
      "patterns": [
        {
          "name": "source.code.ldoc",
          "match": "[\\s\\S]*"
        }
      ]
    },
    {
      "name": "markup.inline.code.ldoc",
      "match": "`([^`]+)`"
    },
    {
      "name": "markup.list.ordered.ldoc",
      "match": "^\\s*\\d+\\.\\s+(.+)$"
    },
    {
      "name": "markup.list.unordered.ldoc",
      "match": "^\\s*[-*+]\\s+(.+)$"
    },
    {
      "name": "markup.list.task.ldoc",
      "match": "^\\s*- \\[([ xX])\\] (.+)$"
    },
    {
      "name": "markup.underline.link.ldoc",
      "match": "\\[(.+?)\\]\\((.+?)\\)"
    },
    {
      "name": "markup.inline.image.ldoc",
      "match": "@image: (.+?) \"(.*?)\""
    },
    {
      "name": "markup.inline.video.ldoc",
      "match": "@video: (.+)"
    },
    {
      "name": "keyword.other.ldoc",
      "match": "^\\s*@\\w+:"
    }
  ],
  "repository": {}
}